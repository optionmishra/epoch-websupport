<IfModule mod_rewrite.c>
    RewriteEngine On

    # Security: Disable directory browsing
    Options -Indexes

    # Block access to sensitive files
    <FilesMatch "(^\.htaccess|^\.env|^\.git|composer\.json|composer\.lock|\.sql|\.log)$">
        Order deny,allow
        Deny from all
    </FilesMatch>

    # Protect application and system directories
    RewriteRule ^(application|system) - [F,L]

    # Allow existing files and directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Allow access to public assets and specific files
    RewriteCond $1 !^(index\.php|public|assets|robots\.txt|sitemap\.xml|favicon\.ico)

    # Route everything else to index.php (with query string for shared hosting)
    RewriteRule ^(.*)$ index.php?/$1 [L,QSA]
</IfModule>
